{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "go: build",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "${workspaceFolder}/magneato${env:GOEXE}",
                "./src"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "go: test",
            "type": "shell",
            "command": "go",
            "args": [
                "test",
                "-v",
                "./src"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "go: test (current file)",
            "type": "shell",
            "command": "go",
            "args": [
                "test",
                "-v",
                "-run",
                "${input:testName}",
                "./src"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "go: clean",
            "type": "shell",
            "command": "go",
            "args": [
                "clean",
                "./src"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "go: run",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                "./src",
                "${input:commandArgs}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [
                "$go"
            ]
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "description": "Test function name",
            "default": "TestParseUnpackArgs",
            "type": "promptString"
        },
        {
            "id": "commandArgs",
            "description": "Command arguments (e.g., 'info test.dsk')",
            "default": "info test.dsk",
            "type": "promptString"
        }
    ]
}

